<p>@fullName</p>
<button class="btn btn-primary" @onclick="ToggleFix">Fix</button>
@if(showFix)
{
    <NameChoiceComponent FirstName="@FirstName" LastName="@LastName" OnNameUpdate="NameUpdated"></NameChoiceComponent>
}

@code {
    private string fullName = "";
    private bool showFix = false;
    public string FirstName { get; set; }
    public string LastName { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }

    private void NameUpdated(string newName)
    {
        fullName = newName;
    }
    private void ToggleFix()
    {
        showFix = !showFix;
    }
}